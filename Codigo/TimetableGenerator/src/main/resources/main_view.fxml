<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="applicationPrincipalPane" onDragDetected="#dragDetectionEvent" onDragDropped="#dragDroppedEvent" onDragEntered="#dragEnteredEvent" onDragExited="#dragExitedEvent" onDragOver="#dragOverEvent" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="thesis.view.JavaFXController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <Menu mnemonicParsing="false" text="Import">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#importDataITCEvent" text="ITC" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Export">
                    <items>
                        <Menu mnemonicParsing="false" text="Data">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#exportDataITCEvent" text="Export as ITC" />
                              <MenuItem mnemonicParsing="false" onAction="#exportDataCSVEvent" text="Export as CSV" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Solutions">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#exportSolutionsITCEvent" text="Export as ITC" />
                              <MenuItem mnemonicParsing="false" onAction="#exportSolutionsPNGEvent" text="Export as PNG" />
                              <MenuItem mnemonicParsing="false" onAction="#exportSolutionsPDFEvent" text="Export as PDF" />
                          </items>
                        </Menu>
                    </items>
                  </Menu>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Settings">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#configMenuEvent" text="Configuration" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#showTutorialMenuEvent" text="Tutorial" />
            </items>
          </Menu>
        </menus>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" text="Unspecified Action" />
              </items>
            </ContextMenu>
         </contextMenu>
      </MenuBar>
   </top>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <BorderPane>
               <center>
                  <TableView fx:id="tableView" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets right="75.0" />
                     </BorderPane.margin>
                  </TableView>
               </center>
               <top>
                  <VBox style="-fx-border-style: solid; -fx-border-radius: 10px; -fx-border-color: gray;" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </BorderPane.margin>
                     <children>
                        <Label text="Database Connection">
                           <VBox.margin>
                              <Insets left="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="38.0">
                           <children>
                              <Label prefHeight="25.0" prefWidth="22.0" text="IP:" />
                              <TextField fx:id="ipField" prefHeight="25.0" prefWidth="135.0" />
                              <Region prefHeight="38.0" prefWidth="87.0" />
                              <Label prefHeight="25.0" prefWidth="32.0" text="Port:" />
                              <TextField fx:id="portField" prefHeight="25.0" prefWidth="51.0" />
                              <Region prefHeight="38.0" prefWidth="115.0" />
                              <Button fx:id="connectBtn" mnemonicParsing="false" onAction="#connectEvent" text="Connect" />
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="50.0" right="50.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
               </top>
               <bottom>
                  <BorderPane prefHeight="42.0" prefWidth="800.0">
                     <right>
                        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#generateSolutionEvent" text="Generate Solution" BorderPane.alignment="CENTER" />
                     </right>
                     <padding>
                        <Insets left="195.0" right="15.0" />
                     </padding>
                     <center>
                        <VBox fx:id="progressContainer" maxWidth="1.7976931348623157E308" spacing="5.0" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </BorderPane.margin>
                        </VBox>
                     </center>
                  </BorderPane>
               </bottom>
               <left>
                  <VBox prefWidth="195.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="195.0" text="Program:" textAlignment="CENTER" />
                        <ChoiceBox fx:id="programsChoiceBox" maxWidth="1.7976931348623157E308" />
                        <Separator maxWidth="1.7976931348623157E308" minHeight="25.0" minWidth="195.0" />
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Data:" />
                        <TreeView fx:id="treeView" showRoot="false" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </left>
            </BorderPane>
            <VBox fx:id="dragAndDropPane" alignment="CENTER" opacity="0.65" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: gray;" visible="false">
               <children>
                  <Label alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Drag and drop files!" textFill="WHITE">
                     <font>
                        <Font size="28.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
